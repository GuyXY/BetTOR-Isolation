{
	"manifest_version": 2,
	"name": "BetTOR Isolation",
	"version": "1.0.0",
	
	"description": "__MSG_extDesc__",
	"default_locale": "en",
	
	"icons": {
		"48": "icons/icon48.png",
		"64": "icons/icon64.png",
		"96": "icons/icon96.png",
		"128": "icons/icon128.png"
	},
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"permissions": [
		"<all_urls>",
		"proxy"
	],

	"browser_action": {
		"default_icon": {
			"48": "icons/icon48.png",
			"64": "icons/icon64.png",
			"96": "icons/icon96.png",
			"128": "icons/icon128.png"			
		}
	}
	
}
