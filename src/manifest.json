{
	"manifest_version": 2,
	"name": "BetTOR Isolation",
	"version": "1.5.1",
	
	"background": {
		"scripts": ["common.js", "background.js"]
	},
	
	"permissions": [
		"proxy",
		"storage",
		"tabs",
		"notifications",
		"<all_urls>"
	],

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {"default": "Shift+Alt+C"},
			"description": "Open the new *C*ircuit popup"
		}
	},

	"options_ui": {
		"browser_style": false,
		"page": "settings.html"
	},

	"browser_action": {
		"default_popup": "new_circuit.html"
	}
}
